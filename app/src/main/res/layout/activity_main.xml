<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7056044c"
    tools:context="com.zyngi.gabo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:elevation="7dp"
        android:background="@drawable/shape_fondo">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:elevation="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <Button
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:text="ALTIPLANO"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="4dp"
                android:onClick="altiplanoClick"
                android:background="#7056044c"/>
            <Button
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:text="VALLES"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="4dp"
                android:onClick="valleClick"
                android:background="#7056044c"/>

            <Button
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:text="favoritos"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="4dp"
                android:onClick="favoritosClick"
                android:background="#7056044c"/>








        </LinearLayout>

    </LinearLayout>








</LinearLayout>
